<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="65dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gumb za pronalazak groomera u blizini -->
    <Button
        android:id="@+id/btnFindGroomers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pronađi groomere u blizini" />

    <!-- Traka za filtriranje -->
    <EditText
        android:id="@+id/etFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Pretraži groomere"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:background="?android:attr/editTextBackground" />

    <!-- Naslov iznad liste -->
    <TextView
        android:id="@+id/tvFavoritesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Omiljeni groomeri"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView za kartice groomera -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroomers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</LinearLayout>
